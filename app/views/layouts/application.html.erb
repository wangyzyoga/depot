	</div>
  <div id="columns">
      <div id="side">
				<div id="cart">
					
				</div>
		<a href="http://www....">Home</a><br />
		<a href="http://www..../fap">Questions</a><br />
		<a href="http://www....">News</a><br />
		<a href="http://www....">Contact</a><br /><br />
		<%= DateTime.parse(Time.now.to_s).strftime('%Y-%m-%d %H:%M:%S').to_s %>
	  </div>
	  <div id="main">
			<% if flash[:notice] %>
				<div id="notice"><%= flash[:notice] %></div>
			<% end %>

			<%= yield %>
	  </div>
  </div>
</body>
</html>
